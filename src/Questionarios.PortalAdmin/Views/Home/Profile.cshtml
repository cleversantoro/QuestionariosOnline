@model Questionarios.PortalAdmin.Models.ProfileViewModel
@{
    ViewData["Title"] = "Perfil";
}
<div class="page-header">
    <div>
        <p class="eyebrow">Conta</p>
        <h1>Perfil do usuário</h1>
        <p class="text-muted">Informações básicas do administrador conectado.</p>
    </div>
</div>
<section class="two-column">
    <div class="panel-card">
        <div class="panel-card__head">
            <div>
                <p class="eyebrow">Identidade</p>
                <h3>Dados principais</h3>
            </div>
        </div>
        <div class="profile-row">
            <div class="avatar avatar-lg">@Model.UserName.First().ToString().ToUpperInvariant()</div>
            <div>
                <div class="fw-semibold">@Model.UserName</div>
                <div class="text-muted">@Model.Email</div>
                <span class="chip chip-neutral mt-2 d-inline-block">@Model.Role</span>
            </div>
        </div>
        <div class="mt-4">
            <label class="form-label">Idioma preferido</label>
            <input class="form-control" value="@Model.Language.ToUpperInvariant()" readonly />
        </div>
    </div>
    <div class="panel-card">
        <div class="panel-card__head">
            <div>
                <p class="eyebrow">Segurança</p>
                <h3>Controle de sessão</h3>
            </div>
        </div>
        <p class="text-muted">Sessões expiram após inatividade prolongada. Reforce com MFA e políticas de senha.</p>
        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex gap-3 mt-3">
            @Html.AntiForgeryToken()
            <button class="btn btn-outline-primary" type="submit">
                <i class="bi bi-box-arrow-right me-2"></i> Sair
            </button>
            <button class="btn btn-secondary" type="button" onclick="history.back()">Voltar</button>
        </form>
    </div>
</section>
